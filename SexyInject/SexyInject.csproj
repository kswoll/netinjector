<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>2.0.0</Version>
    <Authors>Kirk Woll</Authors>
    <Company />
    <Product />
    <Description>A sexier .NET dependency injection framework</Description>
    <Copyright>Copyright 2016-2019</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/kswoll/sexy-inject</PackageProjectUrl>
    <RepositoryUrl>https://github.com/kswoll/sexy-inject</RepositoryUrl>
    <PackageTags>dependency injection di</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Reflection.Emit" Version="4.3.0" />
    <PackageReference Include="System.Reflection.Emit.Lightweight" Version="4.3.0" />
  </ItemGroup>

</Project>
